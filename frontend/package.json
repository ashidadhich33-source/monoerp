{
  "name": "retail-erp-frontend",
  "private": true,
  "type": "module",
  "scripts": {
    "codegen:api": "openapi-typescript http://localhost:8000/openapi.json -o src/types/api.ts",
    "dev": "vite",
    "dev:electron": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build:web": "vite build",
    "build:electron": "tsc -p electron && electron-builder",
    "preview": "vite preview",
    "lint": "eslint .",
    "format": "prettier -w .",
    "postinstall": "npm run codegen:api || echo 'OpenAPI server not reachable; skipping typegen'"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^4.5.2",
    "@tanstack/react-query": "^5.56.0",
    "axios": "^1.7.7",
    "dayjs": "^1.11.12",
    "lucide-react": "^0.460.0"
  },
  "devDependencies": {
    "typescript": "^5.6.2",
    "vite": "^5.4.0",
    "tailwindcss": "^3.4.10",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.41",
    "eslint": "^9.11.0",
    "prettier": "^3.3.3",
    "openapi-typescript": "^7.5.0",
    "concurrently": "^9.0.1",
    "wait-on": "^8.0.0",
    "electron": "^31.4.0",
    "electron-builder": "^24.13.3"
  }
}