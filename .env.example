# Staff Attendance & Payout System Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Primary database (PostgreSQL recommended for production)
DATABASE_URL=postgresql://staff_user:staff_password@localhost/staff_attendance_db

# Backup database (SQLite for local backups)
BACKUP_DATABASE_URL=sqlite:///./backups/backup.db

# Database connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-this-in-production-12345

# JWT Algorithm
ALGORITHM=HS256

# Token expiration (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=480

# Password hashing rounds
BCRYPT_ROUNDS=12

# =============================================================================
# NETWORK SECURITY
# =============================================================================
# Local network subnet for staff access
LOCAL_NETWORK_SUBNET=192.168.1.0/24

# Allowed WiFi MAC addresses (comma-separated)
ALLOWED_WIFI_MAC_ADDRESSES=AA:BB:CC:DD:EE:FF,11:22:33:44:55:66,22:33:44:55:66:77

# Rate limiting (requests per minute)
MAX_REQUESTS_PER_MINUTE=60

# Session timeout (in minutes)
SESSION_TIMEOUT_MINUTES=480

# =============================================================================
# FILE PATHS
# =============================================================================
# Excel upload directory
EXCEL_UPLOAD_PATH=./uploads

# Backup directory
BACKUP_PATH=./backups

# Log directory
LOG_PATH=./logs

# Temporary files directory
TEMP_PATH=./temp

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
# Default admin credentials (CHANGE IN PRODUCTION!)
ADMIN_EMPLOYEE_CODE=ADMIN001
ADMIN_EMAIL=admin@company.com
ADMIN_PASSWORD=admin123
ADMIN_NAME=System Administrator

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Application name
APP_NAME=Staff Attendance & Payout System

# Application version
VERSION=1.0.0

# Debug mode (False for production)
DEBUG=False

# Environment (development, staging, production)
ENVIRONMENT=production

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Enable automatic backups
AUTO_BACKUP_ENABLED=True

# Backup frequency (daily, weekly, monthly)
BACKUP_FREQUENCY=daily

# Backup retention (in days)
BACKUP_RETENTION_DAYS=30

# Backup compression
BACKUP_COMPRESS=True

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
# SMTP settings for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=True

# Email notifications
EMAIL_NOTIFICATIONS_ENABLED=False
ADMIN_EMAIL_NOTIFICATIONS=True

# =============================================================================
# REDIS CONFIGURATION (Optional)
# =============================================================================
# Redis URL for caching
REDIS_URL=redis://localhost:6379/0

# Cache TTL (in seconds)
CACHE_TTL=3600

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file rotation
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Worker processes
WORKERS=4

# Request timeout (in seconds)
REQUEST_TIMEOUT=30

# Max request size (in bytes)
MAX_REQUEST_SIZE=10485760  # 10MB

# =============================================================================
# SSL/TLS CONFIGURATION (Production)
# =============================================================================
# SSL certificate path
SSL_CERT_PATH=/path/to/certificate.crt
SSL_KEY_PATH=/path/to/private.key

# Force HTTPS
FORCE_HTTPS=False

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Health check endpoint
HEALTH_CHECK_ENABLED=True

# Metrics collection
METRICS_ENABLED=True

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Hot reload (development only)
HOT_RELOAD=False

# CORS settings
CORS_ORIGINS=*
CORS_CREDENTIALS=True
CORS_METHODS=*
CORS_HEADERS=*

# =============================================================================
# PRODUCTION CHECKLIST
# =============================================================================
# Before deploying to production, ensure:
# 1. Change SECRET_KEY to a secure random string
# 2. Change admin credentials (ADMIN_PASSWORD)
# 3. Set DEBUG=False
# 4. Configure proper database credentials
# 5. Set up SSL certificates
# 6. Configure firewall rules
# 7. Set up monitoring and logging
# 8. Configure backup and recovery procedures
# 9. Test all functionality
# 10. Update ALLOWED_WIFI_MAC_ADDRESSES with actual MAC addresses