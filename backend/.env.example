# Database Configuration
DATABASE_URL=sqlite:///./staff_attendance.db
BACKUP_DATABASE_URL=sqlite:///./backups/backup.db

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480
BCRYPT_ROUNDS=12

# Network Security
LOCAL_NETWORK_SUBNET=192.168.1.0/24
ALLOWED_WIFI_MAC_ADDRESSES=["AA:BB:CC:DD:EE:FF", "11:22:33:44:55:66"]
MAX_REQUESTS_PER_MINUTE=60
SESSION_TIMEOUT_MINUTES=480

# Admin Configuration
ADMIN_EMPLOYEE_CODE=ADMIN001
ADMIN_EMAIL=admin@company.com
ADMIN_PASSWORD=admin123
ADMIN_NAME=System Administrator

# File Upload Configuration
EXCEL_UPLOAD_PATH=./uploads
BACKUP_PATH=./backups
LOG_PATH=./logs
TEMP_PATH=./temp
MAX_FILE_SIZE=10485760

# Application Configuration
DEBUG=true
APP_NAME=Staff Attendance & Payout System
VERSION=1.0.0
ENVIRONMENT=development

# Backup Configuration
AUTO_BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESS=true

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true
EMAIL_NOTIFICATIONS_ENABLED=false
ADMIN_EMAIL_NOTIFICATIONS=true

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Performance Configuration
WORKERS=4
REQUEST_TIMEOUT=30
MAX_REQUEST_SIZE=10485760

# SSL Configuration (Optional)
SSL_CERT_PATH=
SSL_KEY_PATH=
FORCE_HTTPS=false

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# CORS Configuration
CORS_ORIGINS=["*"]
CORS_CREDENTIALS=true
CORS_METHODS=["*"]
CORS_HEADERS=["*"]